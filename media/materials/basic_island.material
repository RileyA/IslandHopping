vertex_program waterVP cg
{
	source water.cg
	entry_point waterVP
	profiles vs_1_1 arbvp1

	default_params
	{
		param_named_auto worldViewProj worldviewproj_matrix
		param_named_auto world world_matrix
		param_named_auto eyePosW camera_position
		param_named_auto timeval time
	}
}

fragment_program waterFP cg
{
	source water.cg
	entry_point waterFP
	profiles ps_1_1 arbfp1 fp20

}

material island_frame
{
	technique
	{
		pass
		{
			texture_unit
			{
				colour_op_ex source1 src_manual src_current 0.3 0.3 0.3
			}
			fog_override true linear 0 0 0 0 30 90
		}
	}
}

material island_color
{
	technique
	{
		pass
		{
			//scene_blend add
			//depth_write off
			texture_unit
			{
				colour_op_ex source1 src_manual src_current 1 0 0
			}
			fog_override true linear 0 0 0 0 30 90
		}
	}
}

