material MeinKraft
{
	technique
	{
		pass
		{
			//scene_blend alpha_blend
			//depth_write off
			vertex_program_ref waterVP
			{

			}

			fragment_program_ref waterFP
			{

			}

			//texture_unit
			//{
			//	texture water.png
			//}
			texture_unit
			{
				cubic_texture cloudy_noon.jpg combinedUVW
				filtering none
			}
			texture_unit
			{
				// Perlin noise volume
				texture waves2.dds
				// min / mag filtering, no mip
				filtering linear linear none
				//scroll_anim 0 0.5
				scroll_anim 0 1
			}
		}
	}
}

