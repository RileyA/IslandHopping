material MeinKrafta
{
	receive_shadows on
	technique
	{
		pass
		{
		fog_override true linear 0 0 0.03 0.001 0 80
			scene_blend add
			depth_write off
		    //diffuse 0 0 0.5 0
			ambient 0.3 0.9 1 0.5
           // lighting off
		   cull_hardware none
		   cull_software none
		   texture_unit
			{
				texture water02.png
				tex_address_mode wrap
				////filtering trilinear
				scroll_anim 0.2 0.2
				rotate_anim 0.0001
				scale 1.666 1.666
				//wave_xform scale_x sine 1.0 0.2 0.0 5.0
			}
			texture_unit
			{
				texture water02.png
				tex_address_mode wrap
				////filtering trilinear
				scroll_anim -0.05 0.1
				rotate_anim 0.000001
				scale 1.5 1.5
				colour_op modulate
				//wave_xform scale_x sine 1.0 0.2 0.0 5.0
			}
		}
	}
}
